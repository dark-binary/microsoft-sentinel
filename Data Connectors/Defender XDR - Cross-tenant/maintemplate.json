            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectorDefinitions",
            "location": "[parameters('workspace-location')]",
            "kind": "Customizable",
            "properties": {
                "connectorUiConfig": {
                    "id": "DefenderXDRCustomDataConnector",
                    "title": "Defender XDR - Cross-tenant",
                    "publisher": "Debac Manikandan",
                    "descriptionMarkdown": "The Cross-tenant Defender XDR data connector allows ingesting logs from the Defender XDR platform (from any Tenant) into Microsoft Sentinel. The data connector is built on Microsoft Sentinel Codeless Connector Platform. It uses the Graph API to fetch logs and it supports DCR-based [ingestion time transformations](https://docs.microsoft.com/azure/azure-monitor/logs/custom-logs-overview) that parses the received security data into a custom table so that queries don't need to parse it again, thus resulting in better performance.",
                    "graphQueries": [
                        {
                            "metricName": "Total Alerts received",
                            "legend": "Defender XDR Alerts",
                            "baseQuery": "SecurityAlert_CL"
                        },
                        {
                            "metricName": "Total Incidents received",
                            "legend": "Defender XDR Incidents",
                            "baseQuery": "SecurityIncident_CL"
                        }
                    ],
                    "sampleQueries": [
                        {
                            "description": "Get Sample of Defender XDR incidents",
                            "query": "SecurityAlert_CL | take 10"
                        },
                        {
                            "description": "Get Sample of Defender XDR alerts",
                            "query": "SecurityIncident_CL | take 10"
                        }
                    ],
                    "dataTypes": [
                        {
                            "name": "SecurityAlert_CL",
                            "lastDataReceivedQuery": "SecurityAlert_CL\n       | where TimeGenerated > ago(12h)                | summarize Time = max(TimeGenerated)\n            | where isnotempty(Time)"
                        },
                        {
                            "name": "SecurityIncident_CL",
                            "lastDataReceivedQuery": "SecurityIncident_CL\n       | where TimeGenerated > ago(12h)                | summarize Time = max(TimeGenerated)\n            | where isnotempty(Time)"
                        }
                    ],
                    "connectivityCriteria": [
                        {
                            "type": "HasDataConnectors",
                            "value": null
                        }
                    ],
                    "availability": {
                        "status": 1,
                        "isPreview": true
                    },
                    "permissions": {
                        "tenant": null,
                        "licenses": null,
                        "resourceProvider": [
                            {
                                "provider": "Microsoft.OperationalInsights/workspaces",
                                "permissionsDisplayText": "Read and Write permissions are required.",
                                "providerDisplayName": "Workspace",
                                "scope": "Workspace",
                                "requiredPermissions": {
                                    "read": true,
                                    "write": true,
                                    "delete": true,
                                    "action": false
                                }
                            }
                        ]
                    },
                    "instructionSteps": [
                        {
                            "instructions": [
                                {
                                    "type": "Markdown",
                                    "parameters": {
                                        "content": "#### 1. Create a Service Principal in Entra ID \n #### 2. Assign the Microsoft Graph permissions 'SecurityAlert.Read.All' and 'SecurityIncident.Read.All' to the Service Principal \n #### 3. Retrieve the tenant ID, client ID, and client secret of the Service Principal \n #### 4. Input the tenant ID, client ID, and client secret in the fields below \n #### 5. Click on the toggle button to connect to Defender XDR"
                                    }
                                },
                                {
                                    "type": "Textbox",
                                    "parameters": {
                                        "label": "Service Principal Tenant ID",
                                        "placeholder": "Tenant ID",
                                        "type": "text",
                                        "name": "tenantId"
                                    }
                                },
                                {
                                    "type": "Textbox",
                                    "parameters": {
                                        "label": "Service Principal Client ID",
                                        "placeholder": "Service Principal Client ID",
                                        "type": "text",
                                        "name": "clientId"
                                    }
                                },
                                {
                                    "type": "Textbox",
                                    "parameters": {
                                        "label": "Service Principal Client Secret",
                                        "placeholder": "Service Principal Client Secret",
                                        "type": "password",
                                        "name": "clientSecret"
                                    }
                                },
                                {
                                    "parameters": {
                                        "label": "toggle",
                                        "name": "toggle"
                                    },
                                    "type": "ConnectionToggleButton"
                                }
                            ],
                            "innerSteps": null
                        }
                    ],
                    "isConnectivityCriteriasMatchSome": false
                },
                "connectionsConfig": {
                    "templateSpecName": "[concat('/subscriptions/',parameters('subscription'),'/resourceGroups/',parameters('resourceGroupName'),'/providers/Microsoft.Resources/templateSpecs/',variables('dataConnectorTemplateSpecName'))]",
                    "templateSpecVersion": "[variables('dataConnectorVersion')]"
                }
            }
